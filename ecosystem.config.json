{
  "apps": [
    {
      "name": "next-frontend",
      "cwd": "./next",
      "script": "npm",
      "args": "run start",
      "env": {
        "NODE_ENV": "production",
        "PORT": 4001
      },
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "300M"
    },
    {
      "name": "rust-backend",
      "cwd": "./rust",
      "script": "./target/release/backend",
      "env": {
        "RUST_LOG": "info",
        "PORT": 4000
      },
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "200M"
    }
  ]
}
